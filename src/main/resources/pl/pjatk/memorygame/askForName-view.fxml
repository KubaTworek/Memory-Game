<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="pl.pjatk.memorygame.GameController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label styleClass="label-text" text="Your name"/>
    <TextField fx:id="inputName"/>
    <Label fx:id="warningName" styleClass="label-text"/>
    <Button fx:id="confirmBtn" styleClass="main-button" text="OK" onAction="#onConfirmBtn"/>
</VBox>

