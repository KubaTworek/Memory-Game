<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="25.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="pl.pjatk.memorygame.GameController">
    <children>
        <HBox alignment="CENTER" prefHeight="28.0" prefWidth="600.0">
            <children>
                <Label text="Width">
                    <HBox.margin>
                        <Insets left="10.0" right="5.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="widthGame" maxHeight="1.7976931348623157E308" minWidth="30.0" prefHeight="26.0"  />
                <Label text="Height">
                    <HBox.margin>
                        <Insets left="10.0" right="5.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="heightGame" maxHeight="1.7976931348623157E308" minWidth="30.0" prefHeight="26.0"  />
            </children>
        </HBox>
    </children>
    <Button fx:id="playBtn" styleClass="main-button" text="Play" onAction="#onPlayBtn">
        <VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
    </Button>
    <Label fx:id="warningGame"/>
</VBox>



